# =============================================================================
# Docker Compose Configuration
# Copy to .env and customize as needed
# =============================================================================

# ============ PORTS ============
# API Gateway (nginx)
NGINX_PORT=80

# Backend API (direct access, bypasses nginx)
BACKEND_PORT=8000

# Frontend (direct access, bypasses nginx)
FRONTEND_PORT=3000

# PostgreSQL Database
DB_PORT=5432

# Redis
REDIS_PORT=6379

# Mailpit (Development Email)
MAILPIT_HTTP_PORT=8025
MAILPIT_SMTP_PORT=1025
