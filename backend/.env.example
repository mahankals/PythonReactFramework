# Database (PostgreSQL)
DATABASE_URL=postgresql://cloudpe:cloudpe@db:5432/cloudpe

# Redis (Sessions, Cache, Celery)
REDIS_URL=redis://redis:6379/0

# Security - MUST CHANGE IN PRODUCTION
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production

# ============ APPLICATION ============

# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (disable in production)
DEBUG=true

# Logging
LOG_LEVEL=INFO
JSON_LOGS=false

# CORS - comma separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# App Settings
APP_NAME=SampleApp
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# ============ SUPERADMIN ============
# First superadmin created automatically on startup
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=Admin@123
SUPERADMIN_FIRST_NAME=Super
SUPERADMIN_LAST_NAME=Admin

# ============ EMAIL (SMTP) ============
# Default: Mailpit for local development (http://localhost:8025)
# For production, use your SMTP provider (Gmail, SendGrid, etc.)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@sampleapp.local
SMTP_FROM_NAME=SampleApp
SMTP_USE_TLS=false

# Password reset token expiry (minutes)
PASSWORD_RESET_EXPIRE_MINUTES=30

# ============ PRODUCTION EMAIL EXAMPLE ============
# Uncomment and configure for production:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@yourdomain.com
# SMTP_FROM_NAME=YourApp
# SMTP_USE_TLS=true
