# =============================================================================
# Backend Environment Configuration
# Copy to .env and customize as needed
# =============================================================================

# ============ DATABASE ============
# Supported dialects: postgresql, mysql, mariadb, sqlite
# Default ports: postgresql=5432, mysql=3306, mariadb=3306
DATABASE_DIALECT=postgresql
DATABASE_USER=sampleapp
DATABASE_SECRET=sampleapp
DATABASE_HOST=base-app-db
DATABASE_PORT=5432
DATABASE_NAME=sampleapp

# SQLite example (for local development without Docker):
# DATABASE_DIALECT=sqlite
# DATABASE_NAME=./app.db

# ============ REDIS ============
REDIS_URL=redis://redis:6379/0

# ============ SECURITY ============
# MUST CHANGE IN PRODUCTION
# Generate with: openssl rand -hex 32
SECRET_KEY=your-super-secret-key-change-in-production

# JWT Settings
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# ============ APPLICATION ============
# Environment: development, staging, production
ENVIRONMENT=development

# Debug mode (disable in production)
DEBUG=true

# App Settings
APP_NAME=SampleApp
APP_URL=http://localhost:3000
API_URL=http://localhost:8000

# CORS - comma separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# ============ LOGGING ============
# Levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log directory (relative to project root)
LOG_DIR=logs

# Auto-delete logs older than this many days
LOG_RETENTION_DAYS=30

# Max size per log file in MB before rotation
LOG_MAX_SIZE_MB=10

# JSON format logs (recommended for production)
JSON_LOGS=false

# ============ SUPERADMIN ============
# First superadmin created automatically on startup
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=Admin@123
SUPERADMIN_FIRST_NAME=Super
SUPERADMIN_LAST_NAME=Admin

# ============ EMAIL (SMTP) ============
# Default: Mailpit for local development (http://localhost:8025)
SMTP_HOST=mailpit
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@sampleapp.local
SMTP_FROM_NAME=SampleApp
SMTP_USE_TLS=false

# Password reset token expiry (minutes)
PASSWORD_RESET_EXPIRE_MINUTES=30

# ============ PRODUCTION EMAIL EXAMPLE ============
# Uncomment and configure for production:
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@yourdomain.com
# SMTP_FROM_NAME=YourApp
# SMTP_USE_TLS=true
